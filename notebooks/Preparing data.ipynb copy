   "source": [
    "from sklearn.model_selection import train_test_split\n",
    "\n",
    "df_copy = df_cleaned\n",
    "\n",
    "target = df_copy.pop('beer_style')\n",
    "\n",
    "df_copy = df_copy.to_numpy()\n",
    "\n",
    "target = target.to_numpy()\n",
    "\n",
    "X_data, X_test, y_data, y_test = train_test_split(df_copy, target, test_size=0.2, random_state=8)\n",
    "    \n",
    "val_ratio = 0.2 / (1 - 0.2)\n",
    "\n",
    "X_train, X_val, y_train, y_val = train_test_split(X_data, y_data, test_size=val_ratio, random_state=8)"
   ]
